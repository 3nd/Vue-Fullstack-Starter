{
  "plugins": [
    "vue",
    "flowtype"
  ],
  "env": {
    "browser": true,
    "node": true,
    "commonjs": true,
    "es6": true,
    "jest": true
  },
  "globals": {},
  "extends": [
    "airbnb-base",
    "plugin:vue/recommended",
    "plugin:flowtype/recommended"
  ],
  "parser": "vue-eslint-parser",
  "parserOptions": {
    "parser": "babel-eslint",
    "sourceType": "module"
  },
  "rules": {
    // Plugins
    "import/prefer-default-export": "off",

    // Possible Errors

    // Best Practices

    // Variables

    // Node.js and CommonJS

    // Stylistic Issues
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
    "no-underscore-dangle": "off"

    // JS.Next
  }
}
